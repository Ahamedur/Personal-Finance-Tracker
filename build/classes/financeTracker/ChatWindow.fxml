<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>


<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="financeTracker.ChatController"
      alignment="CENTER" spacing="10.0">
    <ImageView fitWidth="100" fitHeight="100" preserveRatio="true" smooth="true">
    <image>
        <Image url="/financeTracker/chatbot.jpg" />
    </image>
</ImageView >

    <TextArea fx:id="chatArea" editable="false" prefHeight="200.0" prefWidth="300.0"/>
    <TextField fx:id="chatInput" onAction="#handleChatInput"/>
    <Button text="Send" onAction="#handleChatInput"/>
</VBox>
